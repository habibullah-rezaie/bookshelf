generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BestsellerBook {
  bookId    String   @id(map: "bestseller_pkey") @db.VarChar(12)
  title     String
  authors   String[] @db.VarChar(256)
  imageURLs String[]
}

model MostPopularBook {
  id       String @id(map: "most_popular_pkey") @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title    String
  author   String @db.VarChar(256)
  imageURL String
}

model UserBook {
  userId    String         @db.Uuid
  bookId    String         @db.VarChar(12)
  status    UserBookStatus @default(READING)
  createdAt DateTime       @default(now())
  updated   DateTime       @updatedAt
  rating    Float          @default(0)

  @@id([userId, bookId])
}

model UserNote {
  id         String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id    String @db.Uuid
  book_id    String @db.VarChar(12)
  contentURL String
}

enum UserBookStatus {
  READING
  HAVE_READ
}
