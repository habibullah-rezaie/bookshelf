generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BestsellerBook {
  id            String         @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title         String
  author        String?        @db.VarChar(256)
  bookImage     String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  primaryISBN10 String         @db.VarChar(10)
  primaryISBN13 String         @db.VarChar(13)
  type          BestsellerType
}

model MostPopularBook {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title     String
  author    String   @db.VarChar(256)
  imageURL  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserBook {
  userId    String         @db.Uuid
  bookId    String         @db.VarChar(12)
  status    UserBookStatus @default(READING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  rating    Float          @default(0)

  @@id([userId, bookId])
}

model UserNote {
  id         String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  userId     String   @db.Uuid
  bookId     String   @db.VarChar(12)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  contentURL String
}

enum UserBookStatus {
  READING
  HAVE_READ
}

enum BestsellerType {
  FICTION
  NON_FICTION
}
